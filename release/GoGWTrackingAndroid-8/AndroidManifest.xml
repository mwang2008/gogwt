<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gogwt.apps.tracking"
    android:versionCode="4"
    android:versionName="4.0.1">
 

    <uses-sdk android:minSdkVersion="8" />
   
    <permission android:name="com.gogwt.apps.tracking.permission.C2D_MESSAGE" android:protectionLevel="signature" />
    <uses-permission android:name="com.gogwt.apps.tracking.permission.C2D_MESSAGE" />
    
    <!-- This app has permission to register and receive message -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!-- Send the registration id to the server -->
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>    
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/> 
    
    <application
        android:icon="@drawable/global_gwt"
        android:label="@string/app_name" android:name=".MainApplication" >
       
       <uses-library android:name="com.google.android.maps" />   
        
       <!--  C2DMClientTestActivity .GoGWTrackingMainActivity -->
        <activity android:label="@string/app_name" android:name=".GoGWTrackingMainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" /> 
        <activity android:name=".activities.EnrollActivity" />
        <activity android:name=".activities.LogoutActivity" />       
        <activity android:name=".activities.MainMenuActivity" android:configChanges="orientation|keyboardHidden"/>      
        <activity android:name=".activities.LocationTrackingActivity" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activities.SettingPrefsActivity" />
        <activity android:name=".activities.HelpActivity" />
        <activity android:name=".c2dm.C2DMMessageReceivedActivity" />
             
        <activity android:name=".activities.AdminInvokeActivity" >
              <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
             </intent-filter>

            <!-- Points to searchable meta data. searchable.xml -->
            <meta-data android:name="android.app.searchable"
                    android:resource="@xml/searchable"/>
        </activity>

        <service android:enabled="true" android:process=":remote" android:name=".services.GPXService">
			<intent-filter>
				<action android:name="com.gogwt.apps.tracking.services.GPXService.SERVICE" />				 
			</intent-filter>
		</service>
	    <service android:enabled="true" android:process=":remotedummy" android:name=".services.DummyService">
			<intent-filter>
				<action android:name="com.gogwt.apps.tracking.services.DummyService" />				 
			</intent-filter>
		</service> 
        	    
        <receiver  android:name=".receiver.StartupReceiver">           
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
	 		</intent-filter>
		</receiver>
		
		<receiver android:name=".receiver.SmsReceiver">
			<intent-filter android:priority="999">				 
			   <action android:name="android.provider.Telephony.SMS_RECEIVED"></action>		
			</intent-filter>
		</receiver> 
        <receiver
            android:name=".c2dm.C2DMRegistrationReceiver" android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.gogwt.apps.tracking" />
            </intent-filter>
        </receiver>  
        
        <receiver
            android:name=".c2dm.C2DMMessageReceiver" android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="com.gogwt.apps.tracking" />
            </intent-filter>
        </receiver>            
         
         
        <provider android:name=".provider.SuggestionProvider"
                 android:authorities="com.gogwt.apps.tracking.provider.SuggestionProvider" />
         
    </application>

  
</manifest>