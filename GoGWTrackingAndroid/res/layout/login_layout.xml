<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView android:layout_width="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_height="wrap_content" android:id="@+id/companyid"
		android:text="@string/groupId"></TextView>

	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:inputType="textPersonName"
		android:id="@+id/groupId">
		<requestFocus></requestFocus>
	</EditText>

	<TextView android:layout_width="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_height="wrap_content" android:id="@+id/textView2"
		android:text="@string/displayName"></TextView>

	<EditText android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:inputType="textPersonName"
		android:id="@+id/displayName">
	</EditText>


	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:stretchColumns="1" android:verticalSpacing="2px">

		<TableRow android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/tableRow1">

			<CheckBox android:layout_column="1" android:layout_width="wrap_content"
				android:text="@string/rememberme" android:layout_height="wrap_content"
				android:id="@+id/rememberme">
			</CheckBox>

			<Button android:layout_height="wrap_content" android:gravity="right"
			    android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content" android:id="@+id/login"
				android:text="@string/login">
			</Button>
		</TableRow>
	</TableLayout>

    <View android:id="@+id/space" 
		android:layout_width="fill_parent" android:layout_height="2dp"
		android:paddingTop="12px" android:paddingBottom="12px"
    />
	<View android:id="@+id/divider" android:background="@drawable/black_white_gradient"
		android:layout_width="fill_parent" android:layout_height="2dp"
		android:paddingTop="12px" android:paddingBottom="12px"
		 />
    <View android:id="@+id/space" 
		android:layout_width="fill_parent" android:layout_height="2dp"
		android:paddingTop="12px" android:paddingBottom="12px"
    />
    
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:stretchColumns="1">
		<TableRow android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:id="@+id/tableRow2">

			<TextView android:layout_column="1" android:layout_width="wrap_content"			
				android:layout_height="wrap_content" android:id="@+id/textView3"
				android:text="@string/nogroupid">
			</TextView>

			<Button android:layout_height="wrap_content" android:gravity="right"
			    android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content" android:id="@+id/signup"
				android:text="@string/signup">
			</Button>
		</TableRow>
	</TableLayout>
			
    <!--  Help -->
    <View android:id="@+id/space" 
		android:layout_width="fill_parent" android:layout_height="2dp"
		android:paddingTop="12px" android:paddingBottom="12px"
    />
	<View android:id="@+id/divider" android:background="@drawable/black_white_gradient"
		android:layout_width="fill_parent" android:layout_height="2dp"
		android:paddingTop="12px" android:paddingBottom="12px"
    />
    <View android:id="@+id/space" 
		android:layout_width="fill_parent" android:layout_height="2dp"
		android:paddingTop="12px" android:paddingBottom="12px"
    />
	<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/help"
				android:text="Click here for help/demo">
	</TextView>

    <!-- Test Account  -->
    <View android:id="@+id/space" 
		android:layout_width="fill_parent" android:layout_height="6dp"
		android:paddingTop="12px" android:paddingBottom="12px"
    />
        
	<View android:id="@+id/divider" android:background="@drawable/black_white_gradient"
		android:layout_width="fill_parent" android:layout_height="2dp"
		android:paddingTop="12px" android:paddingBottom="12px"
    />
    <View android:id="@+id/space" 
		android:layout_width="fill_parent" android:layout_height="20dp"
		android:paddingTop="12px" android:paddingBottom="12px"
    />
	<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
				android:text="Demo Account">
	</TextView>
	<TextView android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
				android:text="@string/demo_account">
	</TextView>
</LinearLayout>
