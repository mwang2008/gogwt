<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.gogwt.app.booking.dto.dataObjects.common">

    <class name="HotelBean" table="g_property">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name"/>
        <property name="description" column="property_description"/>
        
        <property name="address"/>
        <property name="address2"/>
        <property name="city"/>
        <property name="state"/>
        <property name="zipCode" column="zip_code"/>
        <property name="country"/>
        <property name="lat"/>
        <property name="lng"/>
        
        <property name="numberOfRooms"/>
        <property name="numberOfSuites"/>
        <property name="numberOfFloors"/>

        <property name="checkInTime"/>
        <property name="checkOutTime"/>
        
        <property name="hasTennisCourt"/>
        <property name="hasPetsAllowed"/>
        <property name="hasIndoorPool"/>
        <property name="hasOutdoorPool"/>
        <property name="hasKitchen"/>
    </class>
</hibernate-mapping>