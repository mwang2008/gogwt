<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
     xmlns:g="urn:import:com.google.gwt.user.client.ui"
     xmlns:gm='urn:import:com.google.gwt.maps.client'
     xmlns:item='urn:import:com.gogwt.app.booking.gwt.mvpreservation.client.widgets.searchresult.view'>
     
     <ui:style field='resStyle' src="../../reservation.css"/>
  
     <g:HTMLPanel styleName="{resStyle.result_area_border}">
        <div class='{resStyle.item}'> <B><span ui:field='name'/></B> <span class='{resStyle.distance}' ui:field='distance'/> </div>
        <div class='{resStyle.item}' ui:field='address'/> 
        <div class='{resStyle.item}'><b>Amenities:</b> <span ui:field='amenities'/>   </div>
        <div class='{resStyle.btnSelect}'> <g:Button ui:field="btnSelect"/></div>
       
     </g:HTMLPanel>
      
</ui:UiBinder>