<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.gogwt.apps.tracking"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="4" />

    <application android:icon="@drawable/global_gwt" android:name=".MainApplication" 
        android:label="@string/app_name" android:screenOrientation="landscape">
        <uses-library android:name="com.google.android.maps" />
        <!-- .MainActivity -->
        <activity android:name=".GoGWTrackingMainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 
       <activity android:name=".activities.MainMenuActivity" android:screenOrientation="portrait"/>      
        <activity android:name=".activities.LocationTrackingActivity" android:screenOrientation="portrait"/>     
         -->
        <activity android:name=".MyTestConfigActivity" />
        <activity android:name=".activities.LoginActivity" /> 
        <activity android:name=".activities.EnrollActivity" />
        <activity android:name=".activities.LogoutActivity" />       
        <activity android:name=".activities.MainMenuActivity" android:configChanges="orientation|keyboardHidden"/>      
        <activity android:name=".activities.LocationTrackingActivity" android:configChanges="orientation|keyboardHidden"/>
        <activity android:name=".activities.ShowLocationMainTabActivity" />
        <activity android:name=".activities.ShowLocationMapTabActivity" />
        <activity android:name=".activities.ShowLocationListTabActivity" />
        <activity android:name=".activities.SaveTrackActivity" />
        <activity android:name=".activities.SettingPrefsActivity" />
         
        <service android:enabled="true" android:name=".services.GPXService">
			<intent-filter>
				<action android:name="com.gogwt.apps.tracking.services.GPXService.SERVICE" />				 
			</intent-filter>
		</service>
 
        <receiver android:enabled="true" android:name=".receiver.StartupReceiver">           
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<category android:name="android.intent.category.DEFAULT" />
 			</intent-filter>
		</receiver>
		
    </application>
    
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET"/>    
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    
      
    
    
</manifest>